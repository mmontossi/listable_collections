source 'http://rubygems.org'

gem 'rails', ENV['RAILS']
gem 'mocha', '~> 1.1'

platforms :ruby do
  case ENV['DB']
  when 'mysql'
    gem 'mysql2'
  when 'postgresql'
    gem 'pg'
  end
end

platforms :jruby do
  case ENV['DB']
  when 'mysql'
    gem 'jdbc-mysql'
  when 'postgresql'
    gem 'jdbc-postgres'
  end
end
