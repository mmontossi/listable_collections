source 'http://rubygems.org'

gem 'rails', ENV['RAILS']
gem 'mocha', '~> 1.1'

platforms :ruby do
  case ENV['DB']
  when 'mysql'
    gem 'mysql2', '~> 0.3.18'
  when 'postgres'
    gem 'pg'
  when 'sqlite'
    gem 'sqlite3'
  end
end

platforms :jruby do
  case ENV['DB']
  when 'mysql'
    gem 'jdbc-mysql'
  when 'postgre'
    gem 'jdbc-postgres'
  when 'sqlite'
    gem 'jdbc-sqlite3'
  end
end
